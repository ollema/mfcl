// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  userId      String   @id @default(uuid())
  createdAt   DateTime @default(now())
  userName    String   @unique
  displayName String?  @unique
  rfid        String?  @unique
}

model Machine {
  machineId String @id @default(uuid())
  slug      String @unique
  name      String @unique

  setupSteps SetupStep[]
}

model SetupStep {
  setupStepId String  @id @default(uuid())
  done        Boolean @default(false)
  name        String
  description String

  setupActions SetupAction[]

  Machine   Machine @relation(fields: [machineId], references: [machineId], onDelete: Cascade)
  machineId String
}

model SetupAction {
  setupActionId String  @id @default(uuid())
  done          Boolean @default(false)
  skipped       Boolean @default(false)
  name          String
  description   String?
  imagePath     String?

  SetupStep            SetupStep @relation(fields: [setupStepSetupStepId], references: [setupStepId], onDelete: Cascade)
  setupStepSetupStepId String
}
